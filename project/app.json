{
  "expo": {
    "name": "ColorLens Pro",
    "slug": "bolt-expo-nativewind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "colorlens",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bolt.colorlens",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "ColorLens Pro needs access to your camera to analyze colors in real-time.",
        "NSPhotoLibraryUsageDescription": "ColorLens Pro needs access to your photo library to analyze colors from your existing photos.",
        "UIRequiredDeviceCapabilities": [
          "armv7",
          "camera"
        ],
        "UIStatusBarStyle": "default"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router", "expo-font", "expo-web-browser"],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    }
  }
}